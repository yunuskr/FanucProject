        /* Arkaplan: Ã§ok katmanlÄ± radyal + vignette (fotoÄŸraftaki gibi) */
        body{
            min-height:100vh;
            background-color:var(--dark);
            background-image:
            /* merkez Ä±ÅŸÄ±k */
            radial-gradient(1200px 800px at 38% 35%,
                rgba(250,206,0,.95) 0%,
                rgba(240,151,1,.65) 34%,
                rgba(240,151,1,.25) 50%,
                rgba(21,18,10,0) 68%),
            /* saÄŸ Ã¼st sÄ±caklÄ±k */
            radial-gradient(900px 600px at 88% 8%,
