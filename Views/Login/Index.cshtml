            background:linear-gradient(90deg,var(--amber),var(--gold));
            box-shadow:0 6px 18px rgba(240,151,1,.35);
            transition:transform .2s ease, box-shadow .2s ease, filter .2s ease;
        }
        .rx-btn:hover,.rx-admin-btn:hover{
            background:linear-gradient(90deg,var(--gold),var(--amber));
            box-shadow:0 10px 22px rgba(240,151,1,.5);
            transform:translateY(-2px);
            filter:saturate(1.05);
        }

        .rx-link{color:#fff;text-decoration:underline;opacity:.9}
        .rx-badge{background:rgba(255,255,255,.15);color:#fff;border-radius:999px;padding:.35rem .75rem;font-size:.85rem}
        </style>
</head>
<body class="d-flex align-items-center justify-content-center">

