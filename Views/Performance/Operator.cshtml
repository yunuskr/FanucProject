@model FanucRelease.ViewModels.OperatorDetailVM
@{
    ViewData["Title"] = "Operat√∂r Detayƒ±";
}

@section Head {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/performance.css" asp-append-version="true" />
}


<div class="container-fluid py-4" style="min-height: 100vh;">
    <div class="operator-header performance-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div class="d-flex align-items-center">
                <div class="rounded-circle d-flex align-items-center justify-content-center me-4 avatar-initials avatar-lg glass-white-20" style="color: white;">
                    @(Model.AdSoyad.Split(' ').Take(2).Select(n => n.FirstOrDefault()).Aggregate("", (acc, c) => acc + c))
                </div>
                <div>
                    <h1 class="mb-1" style="font-weight: 700; font-size: 2.2rem; color:#fff;">@Model.AdSoyad</h1>
                    <div class="d-flex align-items-center gap-3">
                        <span class="badge" style="background: rgba(255, 255, 255, 0.2); color: white; padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.9rem;">
                            <i class="fas fa-at me-1"></i>@Model.KullaniciAdi
                        </span>
                        <span class="opacity-75" style="font-size: 0.95rem; color:#fff;">
                            <i class="fas fa-clock me-1"></i>@Model.OlusturmaZamani.ToString("dd.MM.yyyy HH:mm")
                        </span>
                    </div>
                </div>
            </div>
            <div class="d-flex gap-3 mt-3 mt-md-0">
                <a class="btn btn-modern btn-glass-white" href="@Url.Action("Index", new { days = Model.Days, maxProgramHours = Model.MaxProgramHours })">
                    <i class="fas fa-arrow-left me-2"></i>Geri
                </a>
                <a class="btn btn-modern btn-outline-gold" href="@Url.Action("OperatorCsv", new { id = Model.OperatorId, days = Model.Days, maxProgramHours = Model.MaxProgramHours })">
                    <i class="fas fa-download me-2"></i>CSV
                </a>
            </div>
        </div>
    </div>
    <div class="filter-card mb-4">
        <form method="get" class="row g-3 align-items-end">
            <input type="hidden" name="id" value="@Model.OperatorId" />
            <div class="col-md-4">
                <label class="form-label fw-semibold text-dark">üìÖ Son (g√ºn)</label>
                <input type="number" name="days" value="@Model.Days" class="form-control form-control-modern" placeholder="T√ºm√º" />
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold text-dark">‚è±Ô∏è Max S√ºre (saat)</label>
                <input type="number" step="0.1" name="maxProgramHours" value="@(Model.MaxProgramHours?.ToString("0.0"))" class="form-control form-control-modern" placeholder="Sƒ±nƒ±r yok" />
            </div>
            <div class="col-md-4">
                <button class="btn btn-modern btn-primary-modern w-100">
                    <i class="fas fa-search me-2"></i>Filtrele
                </button>
            </div>
        </form>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-6 col-lg-2-4">
            <div class="metric-card bg-gradient-warning">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-white opacity-75 mb-1" style="font-size: 0.9rem; font-weight: 500;">Program</div>
                        <div class="text-white" style="font-size: 2.2rem; font-weight: 700; line-height: 1;">@Model.ToplamProgram</div>
                    </div>
                    <div class="text-white opacity-50">
                        <i class="fas fa-code" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-2-4">
            <div class="metric-card bg-gradient-success">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-white opacity-75 mb-1" style="font-size: 0.9rem; font-weight: 500;">Kaynak</div>
                        <div class="text-white" style="font-size: 2.2rem; font-weight: 700; line-height: 1;">@Model.ToplamKaynak</div>
                    </div>
                    <div class="text-white opacity-50">
                        <i class="fas fa-database" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-2-4">
            <div class="metric-card bg-gradient-green">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-white opacity-75 mb-1" style="font-size: 0.9rem; font-weight: 500;">Ba≈üarƒ±lƒ±</div>
                        <div class="text-white" style="font-size: 2.2rem; font-weight: 700; line-height: 1;">@Model.ToplamBasarili</div>
                    </div>
                    <div class="text-white opacity-50">
                        <i class="fas fa-check-circle" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-2-4">
            <div class="metric-card bg-gradient-danger">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-white opacity-75 mb-1" style="font-size: 0.9rem; font-weight: 500;">Hata</div>
                        <div class="text-white" style="font-size: 2.2rem; font-weight: 700; line-height: 1;">@Model.ToplamHata</div>
                    </div>
                    <div class="text-white opacity-50">
                        <i class="fas fa-exclamation-triangle" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-2-4">
            <div class="metric-card bg-gradient-info">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div style="color: #2d3748; opacity: 0.75; font-size: 0.9rem; font-weight: 500; margin-bottom: 0.25rem;">Ba≈üarƒ± %</div>
                        <div style="color: #2d3748; font-size: 2.2rem; font-weight: 700; line-height: 1;">@Model.GenelBasariYuzdesi<span style="font-size: 1.4rem;">%</span></div>
                    </div>
                    <div style="color: #2d3748; opacity: 0.4;">
                        <i class="fas fa-chart-pie" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="data-table-container">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="tbl-program">
                <thead>
                    <tr>
                        <th class="text-white fw-bold border-0 py-3 px-4" style="font-size: 0.95rem;">
                            <i class="fas fa-code me-2"></i>Program
                        </th>
                        <th class="text-white fw-bold border-0 py-3 px-3 text-center" style="font-size: 0.95rem;">
                            <i class="fas fa-database me-2"></i>Kaynak
                        </th>
                        <th class="text-white fw-bold border-0 py-3 px-3 text-center" style="font-size: 0.95rem;">
                            <i class="fas fa-check me-2 text-success"></i>Ba≈üarƒ±lƒ±
                        </th>
                        <th class="text-white fw-bold border-0 py-3 px-3 text-center" style="font-size: 0.95rem;">
                            <i class="fas fa-times me-2 text-danger"></i>Ba≈üarƒ±sƒ±z
                        </th>
                        <th class="text-white fw-bold border-0 py-3 px-3 text-center" style="font-size: 0.95rem;">
                            <i class="fas fa-percentage me-2"></i>Ba≈üarƒ± %
                        </th>
                        <th class="text-white fw-bold border-0 py-3 px-3 text-center" style="font-size: 0.95rem;">
                            <i class="fas fa-bug me-2"></i>Hata
                        </th>
                        <th class="text-white fw-bold border-0 py-3 px-3 text-end" style="font-size: 0.95rem;">
                            <i class="fas fa-clock me-2"></i>S√ºre
                        </th>
                        <th class="text-white fw-bold border-0 py-3 px-3 text-end" style="font-size: 0.95rem;">
                            <i class="fas fa-calendar me-2"></i>Biti≈ü
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var pr in Model.Programlar)
                {
                    var badgeClass = pr.BasariYuzdesi >= 90 ? "success" : pr.BasariYuzdesi >= 70 ? "warning" : "danger";
                    <tr>
                        <td class="px-4 py-3 border-0">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-3 brand-gradient-bg avatar-sm" style="color: white; font-weight: bold;">
                                    <i class="fas fa-file-code"></i>
                                </div>
                                <div>
                                    <div class="fw-bold" style="color: #2d3748; font-size: 1rem;">@pr.ProgramAdi</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-3 py-3 border-0 text-center">
                            <span class="fw-bold" style="color: #2d3748; font-size: 1.1rem;">@pr.KaynakToplam</span>
                        </td>
                        <td class="px-3 py-3 border-0 text-center">
                            <span class="fw-bold" style="color: #38a169;">@pr.BasariliKaynak</span>
                        </td>
                        <td class="px-3 py-3 border-0 text-center">
                            <span class="fw-bold" style="color: #e53e3e;">@pr.BasarisizKaynak</span>
                        </td>
                        <td class="px-3 py-3 border-0 text-center">
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="progress progress-thin">
                                    <div class="progress-bar pb-@badgeClass" role="progressbar" style="width: @pr.BasariYuzdesi%;"></div>
                                </div>
                                <span class="ms-2 fw-bold" style="color: #2d3748; font-size: 0.9rem; min-width: 35px;">@pr.BasariYuzdesi%</span>
                            </div>
                        </td>
                        <td class="px-3 py-3 border-0 text-center">
                            <span class="fw-bold" style="color: #e53e3e;">@pr.HataSayisi</span>
                        </td>
                        <td class="px-3 py-3 border-0 text-end">
                            <span style="color: #4a5568; font-weight: 500; font-size: 0.9rem;">@pr.ProgramSureText</span>
                        </td>
                        <td class="px-3 py-3 border-0 text-end">
                            <span style="color: #4a5568; font-weight: 500; font-size: 0.9rem;">@pr.BitisZamani.ToString("dd.MM.yyyy HH:mm")</span>
                        </td>
                    </tr>
                }
                @if (!Model.Programlar.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center py-5 border-0">
                            <div style="color: #a0aec0; font-size: 1.1rem;">
                                <i class="fas fa-search mb-3" style="font-size: 3rem;"></i>
                                <div>Kayƒ±t bulunamadƒ±.</div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>

 

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Tablo sƒ±ralama fonksiyonalitesi
    const tbl = document.getElementById('tbl-program');
    if(!tbl) return;
    
    const thead = tbl.querySelector('thead');
    if(!thead) return;
    
    let sortState = {};
    
    function getCellValue(tr, idx) {
        const td = tr.children[idx];
        if(!td) return '';
        const text = td.innerText.trim();
        const num = text.replace(/[%]/g,'').replace(',', '.');
        return isNaN(num) || num === '' ? text : parseFloat(num);
    }
    
    function comparer(idx) {
        return function(a, b) {
            const v1 = getCellValue(a, idx);
            const v2 = getCellValue(b, idx);
            if(typeof v1 === 'number' && typeof v2 === 'number') return v1 - v2;
            return v1.toString().localeCompare(v2.toString(), 'tr');
        }
    }
    
    thead.addEventListener('click', e => {
        const th = e.target.closest('th');
        if(!th) return;
        
        const ths = Array.from(thead.querySelectorAll('th'));
        const idx = ths.indexOf(th);
        if(idx < 0) return;
        
        const tbody = tbl.querySelector('tbody');
        const rows = Array.from(tbody.querySelectorAll('tr')).filter(r => r.children.length > 1);
        const asc = !(sortState[idx] === true);
        
        // Sƒ±ralama animasyonu
        tbody.style.opacity = '0.7';
        tbody.style.transition = 'opacity 0.3s ease';
        
        setTimeout(() => {
            rows.sort(comparer(idx));
            if(!asc) rows.reverse();
            rows.forEach(r => tbody.appendChild(r));
            
            sortState = {[idx]: asc};
            ths.forEach(h => h.classList.remove('sorted-asc', 'sorted-desc'));
            th.classList.add(asc ? 'sorted-asc' : 'sorted-desc');
            
            tbody.style.opacity = '1';
        }, 150);
    });
    
    // Metrik kartlarƒ± animasyon gecikmesi
    const metricCards = document.querySelectorAll('.metric-card');
    metricCards.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
    });
});
</script>