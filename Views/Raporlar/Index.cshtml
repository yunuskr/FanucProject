<script>
    // Quick filter functions for date shortcuts
    function setLastWeek() {
        const today = new Date();
        const lastWeek = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000);
        
        document.querySelector('input[name="startDate"]').value = formatDate(lastWeek);
        document.querySelector('input[name="endDate"]').value = formatDate(today);
    }
    
    function setLastMonth() {
        const today = new Date();
        const lastMonth = new Date(today.getTime() - 30 * 24 * 60 * 60 * 1000);
        
        document.querySelector('input[name="startDate"]').value = formatDate(lastMonth);
        document.querySelector('input[name="endDate"]').value = formatDate(today);
    }
    
    function formatDate(date) {
        return date.toISOString().split('T')[0];
    }
    
    // Add some hover effects and animations
    document.addEventListener('DOMContentLoaded', function() {
        // Animate filter form on page load
        const filterCard = document.querySelector('.gold-card');
        if (filterCard) {
            filterCard.style.opacity = '0';
            filterCard.style.transform = 'translateY(-20px)';
            setTimeout(() => {
                filterCard.style.transition = 'all 0.5s ease-out';
                filterCard.style.opacity = '1';
                filterCard.style.transform = 'translateY(0)';
            }, 200);
        }
        
        // Add tooltips to filter buttons
        const tooltips = document.querySelectorAll('[title]');
        tooltips.forEach(element => {
            element.setAttribute('data-bs-toggle', 'tooltip');
        });
        
        // Initialize Bootstrap tooltips if available
        if (typeof bootstrap !== 'undefined' && bootstrap.Tooltip) {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        }
    });
</script>
