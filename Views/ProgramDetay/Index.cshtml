@model FanucRelease.Models.ProgramVerisi
@using System.Linq
@using FanucRelease.Models

@{
    ViewData["Title"] = "Program Detayı";
    var operatorAdSoyad = Model?.Operator is null ? "—" : $"{Model.Operator.Ad} {Model.Operator.Soyad}";
    var kaynakSayisi   = Model?.Kaynaklar?.Count ?? 0;
    var hataSayisi     = Model?.Hatalar?.Count ?? 0;

    // Controller'dan gelecek son programlar listesi (IEnumerable<ProgramVerisi>)
    var sonProgramlar = ViewBag.SonProgramlar as IEnumerable<ProgramVerisi>
                        ?? Enumerable.Empty<ProgramVerisi>();
}
<style>
/* === SAYFAYA ÖZEL ALTIN ARKAPLAN (login ile aynı) === */
:root{
  --gold:#face00;      /* parlak sarı */
  --amber:#f09701;     /* sıcak turuncu */
  --dark:#15120a;      /* çok koyu kahve/siyah */
}

/* Layout'taki body arkaplanını ez */
body{
  background-color:var(--dark) !important;
  background-image:
    /* merkez ışık */
    radial-gradient(1200px 800px at 38% 35%,
      rgba(250,206,0,.95) 0%,
      rgba(240,151,1,.65) 34%,
      rgba(240,151,1,.25) 50%,
      rgba(21,18,10,0) 68%),
    /* sağ üst sıcaklık */
    radial-gradient(900px 600px at 88% 8%,
      rgba(240,151,1,.35) 0%,
      rgba(21,18,10,0) 60%),
    /* sol alt karartma */
    radial-gradient(1000px 700px at 0% 100%,
      rgba(0,0,0,.55) 10%,
      rgba(0,0,0,0) 60%),
    /* zemin */
    linear-gradient(180deg,#1c150a 0%, var(--dark) 100%);
  background-attachment:fixed;
  background-size:cover;
}

/* yumuşak vignette + hafif dither (banding azaltır) */
body::after{
  content:""; position:fixed; inset:0; pointer-events:none;
  background: radial-gradient(150% 130% at 50% 50%,
    rgba(0,0,0,0) 60%, rgba(0,0,0,.45) 100%);
  mix-blend-mode:multiply;
}
body::before{
  content:""; position:fixed; inset:-2px; pointer-events:none;
  background: repeating-linear-gradient(0deg,
    rgba(255,255,255,.015) 0 2px,
    rgba(0,0,0,.02) 2px 4px);
  opacity:.25; mix-blend-mode:overlay;
}

/* Layout'taki içerik katmanının beyaz film efektini kaldır */
.content-area{ background: transparent !important; }
</style>
<div class="container-fluid">

    <!-- Üst bilgi kartları -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">
            <i class="fas fa-robot me-2"></i>@Model!.ProgramAdi
        </h2>

        <!-- Programın TÜM hataları için tek sayfa -->
        <a asp-action="Hatalar" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Hata Detaylarını Gör (@hataSayisi)
        </a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Program</div>
                        <div class="h4 mb-0">@Model.ProgramAdi</div>
                    </div>
                    <i class="fas fa-code fa-2x text-primary"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Kaynak Sayısı</div>
                        <div class="h4 mb-0">@((Model.KaynakSayisi > 0) ? Model.KaynakSayisi : kaynakSayisi)</div>
                    </div>
                    <i class="fas fa-bolt fa-2x text-success"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Operatör</div>
                        <div class="h5 mb-0">@operatorAdSoyad</div>
                    </div>
                    <i class="fas fa-user fa-2x text-info"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Kaynaklar tablosu -->
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Kaynaklar</h5>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Toplam Süre</th>
                            <th>PRC</th>
                            <th>SRC</th>
                            <th style="width:1%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Kaynaklar is null || !Model.Kaynaklar.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-muted">Kayıt yok.</td>
                            </tr>
                        }
                        else
                        {
                            var i = 1;
                            foreach (var k in Model.Kaynaklar.OrderBy(k => k.Id))
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@k.BaslangicSaati.ToString("HH:mm:ss")</td>
                                    <td>@k.BitisSaati.ToString("HH:mm:ss")</td>
                                    <td>
                                        @(k.ToplamSure != default 
                                            ? k.ToplamSure.ToString("HH:mm:ss") 
                                            : (k.BitisSaati - k.BaslangicSaati).ToString(@"hh\:mm\:ss"))
                                    </td>
                                    <td>@k.PrcNo</td>
                                    <td>@k.SrcNo</td>
                                    <td class="text-end">
                                        <!-- Tek kaynak detayı için buton -->
                                        <a asp-action="KaynakDetay" asp-route-id="@k.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            Detay
                                        </a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- GEÇMİŞ PROGRAMLAR -->
    <div class="card shadow-sm mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Geçmiş Programlar</h5>
            <small class="text-muted">Son 10</small>
        </div>

        @if (!sonProgramlar.Any() || sonProgramlar.All(p => p.Id == Model?.Id))
        {
            <div class="card-body text-muted">Henüz başka program yok.</div>
        }
        else
        {
            <div class="list-group list-group-flush">
                @foreach (var p in sonProgramlar
                                   .Where(p => p.Id != Model?.Id)
                                   .OrderByDescending(p => p.Id)
                                   .Take(10))
                {
                    <a asp-controller="ProgramDetay"
                       asp-action="Index"
                       asp-route-id="@p.Id"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div class="me-2">
                            <div class="fw-semibold">@p.ProgramAdi</div>
                            <small class="text-muted">#@p.Id • @p.KaynakSayisi kaynak</small>
                        </div>

                        <span class="badge bg-danger-subtle text-danger border">
                            @((p.Hatalar?.Count) ?? 0)
                        </span>
                    </a>
                }
            </div>
        }
    </div>

</div>
