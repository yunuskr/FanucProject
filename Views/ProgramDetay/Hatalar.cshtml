@model FanucRelease.ViewModels.ProgramHatalarVM

@{
    ViewData["Title"] = "Hata Detayları";
}

@section Head {
    <link rel="stylesheet" href="~/css/performance.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<style>
/* Golden theme background for the page */
:root {
  --gold-start: #f09701;
  --gold-end: #face00;
  --gold-grad: linear-gradient(90deg, var(--gold-start), var(--gold-end));
  --gradient-primary: var(--gold-grad);
}

body {
  background: 
    radial-gradient(1200px 800px at 38% 35%, rgba(250,206,0,.95) 0%, rgba(240,151,1,.65) 34%, rgba(240,151,1,.25) 50%, rgba(21,18,10,0) 68%),
    radial-gradient(900px 600px at 88% 8%, rgba(240,151,1,.35) 0%, rgba(21,18,10,0) 60%),
    linear-gradient(180deg,#1c150a 0%, #15120a 100%);
  background-attachment: fixed;
  background-size: cover;
}

.content-area { background: transparent !important; }

/* Custom error card styles to override default */
.error-card-critical {
  border-left: 4px solid #ef4444 !important;
}

.error-card-warning {
  border-left: 4px solid #3b82f6 !important;
}

.error-badge-critical {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.error-badge-warning {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}
</style>
<div class="container-fluid">

    <!-- Modern Header Section -->
    <div class="row align-items-center mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="stat-icon danger me-3" style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div>
                        <h2 class="mb-0 text-white" style="text-shadow: 0 2px 8px rgba(0,0,0,.25)">
                            Hata Detayları
                        </h2>
                        <p class="mb-0 text-white-50 small">
                            Program: <strong>@Model.ProgramAdi</strong>
                            @if (!string.IsNullOrWhiteSpace(Model.OperatorAdSoyad))
                            {
                                <span class="ms-2">• Operatör: <strong>@Model.OperatorAdSoyad</strong></span>
                            }
                        </p>
                    </div>
                </div>
                <a asp-controller="ProgramDetay" asp-action="Index" asp-route-id="@Model.ProgramId" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-1"></i> Programa Dön
                </a>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="stats-grid mb-4">
        @{
            var totalErrors = Model.Hatalar?.Count ?? 0;
            var criticalErrors = Model.Hatalar?.Count(h => h.Tip == "1") ?? 0;
            var warningErrors = Model.Hatalar?.Count(h => h.Tip == "2") ?? 0;
        }
        
        <div class="stat-card warning">
            <div class="stat-header">
                <div class="stat-icon warning">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
            <div class="stat-value">@totalErrors</div>
            <div class="stat-label">Toplam Hata</div>
        </div>
        
        <div class="stat-card danger">
            <div class="stat-header">
                <div class="stat-icon danger">
                    <i class="fas fa-times-circle"></i>
                </div>
            </div>
            <div class="stat-value">@criticalErrors</div>
            <div class="stat-label">Kritik Hata</div>
        </div>
        
        <div class="stat-card info">
            <div class="stat-header">
                <div class="stat-icon info">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
            </div>
            <div class="stat-value">@warningErrors</div>
            <div class="stat-label">Uyarı</div>
        </div>
    </div>

    <!-- Hata Listesi -->
    @if (Model.Hatalar == null || !Model.Hatalar.Any())
    {
        <div class="gold-card p-4 text-center">
            <div class="stat-icon success mx-auto mb-3">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3 class="mb-3">Harika! Hiç Hata Yok</h3>
            <p class="text-muted mb-0">Bu programa ait herhangi bir hata kaydı bulunamadı. Sistem sorunsuz çalışıyor.</p>
        </div>
    }
    else
    {
        <div class="row g-3">
            @{
                var errorIndex = 1;
                foreach (var hata in Model.Hatalar)
                {
                    var errorType = hata.Tip == "1" ? "critical" : "warning";
                    var errorIcon = hata.Tip == "1" ? "fas fa-times-circle" : "fas fa-exclamation-triangle";
                    var errorClass = hata.Tip == "1" ? "error-card-critical" : "error-card-warning";
                    var badgeClass = hata.Tip == "1" ? "error-badge-critical" : "error-badge-warning";
                    
                    <div class="col-12">
                        <div class="gold-card p-4 @errorClass">
                            <div class="d-flex align-items-start gap-3 mb-3">
                                <div class="badge-rank-gold">@errorIndex</div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <i class="@errorIcon" style="color: @(hata.Tip == "1" ? "#ef4444" : "#3b82f6"); font-size: 1.2rem;"></i>
                                        <span class="@badgeClass">@(hata.Tip == "1" ? "Kritik" : "Uyarı")</span>
                                    </div>
                                    <div class="fw-semibold text-dark mb-2" style="font-size: 1.1rem;">
                                        @hata.Aciklama
                                    </div>
                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="fas fa-clock me-2" style="color: var(--gold-start);"></i>
                                        @hata.Zaman.ToString("dd MMMM yyyy, HH:mm:ss")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    errorIndex++;
                }
            }
        </div>
    }

</div>
